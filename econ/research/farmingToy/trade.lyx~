\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $p_{f}^{r}f_{r}^{r}+p_{f}^{d}f_{r}^{d}+p_{c}^{r}c_{r}^{r}+p_{c}^{r}c_{r}^{d}=w^{r}$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\frac{1}{(f_{r}^{r}+f_{r}^{d})}\frac{1}{p_{f}}=\frac{\gamma_{i}}{(c_{r}^{r}+c_{r}^{d}+1)}\frac{1}{p_{c}}$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\frac{1}{(f_{d}^{r}+f_{d}^{d})}\frac{1}{p_{f}}=\frac{\gamma_{i}}{(c_{d}^{r}+c_{d}^{d}+1)}\frac{1}{p_{c}}$
\end_inset


\end_layout

